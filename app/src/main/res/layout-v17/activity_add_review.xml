<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.shoor.shoor.AddReviewActivity">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/back_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/segoeuil"
            android:gravity="center_vertical"
            android:text="التقييم"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:targetApi="jelly_bean" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:background="#00ffffff"
            android:onClick="back"
            app:srcCompat="@drawable/ic_arrow_back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuil"
        android:text="السعر"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/head"
        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute" />

    <RatingBar
        android:id="@+id/rating_price"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:theme="@style/CustomRatingBar"/>

    <TextView
        android:id="@+id/hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuil"
        android:text="المستشفى"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rating_price"
        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        />

    <RatingBar
        android:id="@+id/rating_hospital"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/hospital"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:theme="@style/CustomRatingBar"
        />

    <TextView
        android:id="@+id/doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuil"
        android:text="الطبيب"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rating_hospital"
        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        />

    <RatingBar
        android:id="@+id/rating_doctor"
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/doctor"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:theme="@style/CustomRatingBar"/>

    <EditText
        android:id="@+id/comment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:fontFamily="@font/segoeuil"
        android:gravity="start"
        android:hint="التعليق"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rating_doctor"
        android:inputType="textPersonName"
        android:textDirection="rtl"
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintRight_toLeftOf="parent"
        tools:targetApi="jelly_bean_mr1"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuil"
        android:text="إرفاق صورة (اختياري):"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/comment"
        tools:ignore="HardcodedText,MissingConstraints,UnusedAttribute"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/attach_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/filter_style"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_add"
        android:paddingTop="5dp"
        android:layout_marginTop="25dp"
        android:onClick="AddPic"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toLeftOf="@id/add_pic"
        app:layout_constraintTop_toBottomOf="@id/comment"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/save_app"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/add_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/filter_style"
        android:fontFamily="@font/segoeuil"
        android:onClick="SendComment"
        android:text="إرسال"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_pic"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>

<FrameLayout
    android:id="@+id/fragmentList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.shoor.shoor.ListFragment"
    android:layoutDirection="rtl"
    android:background="#ffffff">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="إضافة إلى ...."
    android:textSize="18sp"
    android:padding="10dp"/>
    <ListView
        android:id="@+id/ListNames"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="320dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        tools:listitem="@layout/list_names"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/ListNames"
        android:layoutDirection="rtl">

        <ImageButton
            android:id="@+id/AddList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            app:layout_constraintTop_toBottomOf="@id/ListNames"
            android:background="@color/colorPrimary"
            android:layout_gravity="start"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/AddListlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إضافة قائمة جديدة"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" />
    </LinearLayout>


</FrameLayout>

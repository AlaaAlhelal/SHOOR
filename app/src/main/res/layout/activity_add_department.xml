<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shoor.shoor.AddDepartment">

    <RelativeLayout
        android:id="@+id/head_addDep"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/back"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/segoeuil"
            android:gravity="center_vertical"
            android:text="إضافة تخصص "
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:targetApi="jelly_bean" />


        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="#00ffffff"
            android:onClick="back"
            app:srcCompat="@drawable/ic_arrow_back" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/head_addDep">

        <EditText
            android:id="@+id/add_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:fontFamily="@font/segoeuil"
            android:gravity="end"
            android:hint="اسم التخصص "
            android:inputType="textPersonName"
            android:textAlignment="viewEnd"
            android:textDirection="rtl"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="118dp"
            tools:targetApi="jelly_bean_mr1" />

        <Button
            android:id="@+id/save_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/female"
            android:layout_centerHorizontal="true"
            android:background="@drawable/filter_style"
            android:fontFamily="@font/segoeuil"
            android:onClick="Send"
            android:text="حفظ"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="304dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>